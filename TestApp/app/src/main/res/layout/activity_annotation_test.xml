<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_1"
        android:textSize="16sp"
        android:padding="5dp"
        android:text="1"
        android:gravity="center"
        android:background="@drawable/selector_main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_2"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="2"
        android:gravity="center"
        android:background="@drawable/selector_main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_3"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="3"
        android:gravity="center"
        android:background="@drawable/selector_main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_4"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="4"
        android:gravity="center"
        android:background="@drawable/selector_main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_5"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="5"
        android:gravity="center"
        android:background="@drawable/selector_main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_6"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="6"
        android:gravity="center"
        android:background="@drawable/selector_main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>